<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- res/values/themes.xml -->
    <style name="Theme.AiAssistantCoder" parent="Theme.Material3.Dark.NoActionBar">

        <item name="gradientStart">@color/bg_third</item>
        <item name="gradientCenter">@color/bg_secondary</item>
        <item name="gradientEnd">@color/bg_primary</item>

        <!-- Map brand colors -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryContainer">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryContainer">@color/purple_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background / surfaces -->
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="colorSurface">@color/bg_third</item>   <!-- or create @color/surface -->
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/red</item>          <!-- be sure @color/red exists -->
        <item name="colorOnError">@color/white</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/bg_primary</item>

        <!-- Typography defaults (optional) -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>

        <!-- Component default styles (point to STYLES, not colors) -->
        <item name="materialButtonStyle">@style/App.Button.Primary</item>
        <item name="materialButtonOutlinedStyle">@style/App.Button.Outlined</item>
        <item name="textInputStyle">@style/App.TextInput</item>
        <item name="bottomNavigationStyle">@style/App.BottomNav</item>
        <item name="materialCardViewStyle">@style/App.Card</item>

        <!-- Extra roles -->
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurfaceVariant">@color/bg_secondary</item>
        <item name="colorOnSurfaceVariant">@color/grey</item>
        <item name="colorOutline">@color/grey_dark</item>

        <!-- Bars -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Inputs -->
        <item name="editTextStyle">@style/App.TextInput.EditText</item>

        <!-- Overlays -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.AiAssistantCoder.Dialog</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.AiAssistantCoder.BottomSheet</item>
    </style>
</resources>
