<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1) Base gradient fills the whole button -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/purple_blue"
                android:centerColor="@color/purple_light"
                android:endColor="@color/purple"
                android:useLevel="false" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- 2) Bottom inner shadow (small strip at bottom) -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />

            <!-- thickness of dark strip -->
            <size android:height="2dp" />

            <gradient
                android:startColor="#66000000"
                android:endColor="#00000000"
                android:angle="90" />
        </shape>
    </item>

    <!-- 3) Top glossy highlight (small strip at top) -->
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />

            <!-- thickness of highlight strip -->
            <size android:height="2dp" />

            <gradient
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
        </shape>
    </item>

</layer-list>
